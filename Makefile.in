APP = pdfresurrect
OBJS = main.o pdf.o
CC = @CC@
CFLAGS = @CFLAGS@
PREFIX = @prefix@

all: $(OBJS) $(APP)

$(APP): $(OBJS)
	$(CC) -o $@ $(OBJS) $(CFLAGS)

%.o: %.c
	$(CC) -o $@ -c $< $(CFLAGS)

install:
	cp $(APP) $(PREFIX)/bin/

uninstall:
	rm $(PREFIX)/bin/$(APP)

clean:
	rm -rfv $(OBJS) $(APP)

distclean: clean
	rm -f Makefile
	rm -f config.log config.status

.PHONY: clean distclean install
